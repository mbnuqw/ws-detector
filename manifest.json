{
  "manifest_version": 2,
  "name": "WebSocket Detector",
  "version": "1.2.1",

  "description": "Detects websocket connection.",
  "homepage_url": "https://github.com/mbnuqw/ws-detector",
  "icons": {
    "48": "./assets/icons/ws-48.png",
    "96": "./assets/icons/ws-96.png"
  },
  "permissions": ["webRequest", "tabs", "<all_urls>"],

  "page_action": {
    "default_icon": {
      "19": "./assets/icons/ws-16_logo_inact.png",
      "38": "./assets/icons/ws-32_logo_inact.png"
    },
    "default_title": "WebSocket not detected"
  },

  "background": {
    "scripts": ["background/main.js"]
  }
}
